{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "react-tauri-template",
  "version": "0.1.0",
  "identifier": "com.react-tauri-template.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3001",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "react-tauri-template",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
